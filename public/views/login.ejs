<div class="row">
    <div class="col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
        <div class="well login-well">
            <h2>Login</h2>

            <form role="form" ng-submit="login.login()" novalidate>
                <div class="alert alert-danger" role="alert" ng-if="message">
                    <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                    <span class="sr-only">Error:</span>
                    {{ login.message }}
                </div>

                <div class="form-group">
                    <label for="inputEmail">Email address</label>
                    <input ng-model="login.credentials.email" type="email" class="form-control" id="inputEmail" placeholder="Enter email">
                </div>
                <div class="form-group">
                    <label for="inputPassword">Password</label>
                    <input ng-model="login.credentials.password" type="password" class="form-control" id="inputPassword" placeholder="Password">
                </div>
                <div class="checkbox">
                    <label>
                        <input ng-model="login.credentials.remember" type="checkbox"> Remember me
                    </label>
                </div>
                <button type="submit" class="btn btn-primary">Login</button>
            </form>
        </div>
    </div>
</div>