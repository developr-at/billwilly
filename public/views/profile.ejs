<div class="row">
    <div class="col-sm-10 col-sm-offset-1">
        <div class="row">
            <div class="col-sm-12">
                <h1>Profile</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <form class="form-horizontal" name="profileForm" role="form" ng-submit="profile.submitProfileChanges(profileForm.$valid)" novalidate>
                    <div class="alert alert-danger" role="alert" ng-if="message">
                        <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                        <span class="sr-only">Error:</span>
                        {{ profile.message }}
                    </div>

                    <div class="form-group" ng-class="{ 'has-error' : profileForm.firstname.$invalid && profile.profileSubmitted }">
                        <label class="col-sm-3" for="firstname">Firstname</label>
                        <div class="col-sm-9">
                            <input ng-model="profile.profileData.firstname" type="text" class="form-control" name="firstname" id="firstname" placeholder="Enter Firstname" required>
                            <ng-messages for="profileForm.firstname.$error" ng-if="profile.profileSubmitted">
                                <ng-message when="required" class="help-block">Please provide a firstname.</ng-message>
                            </ng-messages>
                        </div>
                    </div>
                    <div class="form-group" ng-class="{ 'has-error' : profileForm.lastname.$invalid && profile.profileSubmitted }">
                        <label class="col-sm-3" for="lastname">Lastname</label>
                        <div class="col-sm-9">
                            <input ng-model="profile.profileData.lastname" type="text" class="form-control" name="lastname" id="lastname" placeholder="Enter Lastname" required>
                            <ng-messages for="profileForm.lastname.$error" ng-if="profile.profileSubmitted">
                                <ng-message when="required" class="help-block">Please provide a lastname.</ng-message>
                            </ng-messages>
                        </div>
                    </div>
                    <div class="form-group" ng-class="{ 'has-error' : profileForm.email.$invalid && profile.profileSubmitted }">
                        <label class="col-sm-3" for="email">Email address</label>
                        <div class="col-sm-9">
                            <input ng-model="profile.profileData.email" type="email" class="form-control" name="email" id="email" disabled>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary col-sm-3">Save Changes</button>
                </form>
            </div>
        </div>
        <hr class="soften" />
        <div class="row">
            <div class="col-sm-12">
                <h2>Friends</h2>
                <div class="well">
                    <div class="row">
                        <form name="addFriendForm" role="form" novalidate>
                            <div class="col-sm-6">
                                <div class="input-group">
                                    <input ng-model="profile.newFriendEmail" name="friendEmail" id="friendEmail" type="email" class="form-control" placeholder="Enter E-Mail...">
                                    <span class="input-group-btn">
                                        <button ng-click="profile.addFriend()" class="btn btn-default" type="button">Add Friend</button>
                                    </span>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <ng-messages for="addFriendForm.friendEmail.$error" ng-if="addFriendForm.friendEmail.$dirty">
                                    <ng-message when="email" class="help-block">Please enter a valid email adress.</ng-message>
                                </ng-messages>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div ng-hide="profile.friends.length > 0">
                    You currently have no friends
                </div>
                <div ng-show="profile.friends">
                    <table st-table="profile.friends" class="table table-striped">
                        <thead>
                            <tr>
                                <th>Friend</th>
                                <th>Amount</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="friend in profile.friends">
                                <td><a ui-sref="userProfile({ userId: friend.id })">{{ friend.firstname }} {{ friend.lastname }} ({{ friend.email }})</a></td>
                                <td>{{ friend.amount | currency:"EUR":2 }}</td>
                                <td><button type="button" class="btn btn-default btn-xs" ng-click="profile.removeFriend(friend.email)"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></button></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>