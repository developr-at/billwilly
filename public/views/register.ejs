<div class="row">
    <div class="col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
        <div class="well login-well">
            <h2>Register</h2>

            <form role="form" ng-submit="login.register()" novalidate>
                <div class="alert alert-danger" role="alert" ng-if="message">
                    <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                    <span class="sr-only">Error:</span>
                    {{ login.message }}
                </div>

                <div class="form-group">
                    <label for="inputFirstname">Firstname</label>
                    <input ng-model="login.registration.firstname" type="text" class="form-control" id="inputFirstname" placeholder="Enter Firstname">
                </div>
                <div class="form-group">
                    <label for="inputLastname">Lastname</label>
                    <input ng-model="login.registration.lastname" type="text" class="form-control" id="inputLastname" placeholder="Enter Lastname">
                </div>
                <div class="form-group">
                    <label for="inputEmail">Email address</label>
                    <input ng-model="login.registration.email" type="email" class="form-control" id="inputEmail" placeholder="Enter email">
                </div>
                <div class="form-group">
                    <label for="inputFirstPassword">Password</label>
                    <input ng-model="login.registration.firstPassword" type="password" class="form-control" id="inputFirstPassword" placeholder="Enter password">
                </div>
                <div class="form-group">
                    <label for="inputSecondPassword">Password (Repeat)</label>
                    <input ng-model="login.registration.secondPassword" type="password" class="form-control" id="inputSecondPassword" placeholder="Enter password again">
                </div>
                <button type="submit" class="btn btn-primary">Register</button>
            </form>
        </div>
    </div>
</div>